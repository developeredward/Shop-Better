<%- include('../partials/admin-navbar', { title: 'ShopBetter Admin', currentPath
}) %>

<section class="admin-dashboard">
  <h1 class="dashboard-title">Admin Dashboard</h1>

  <div class="dashboard-overview">
    <div class="dashboard-card">
      <h2>Total Products</h2>
      <p class="stat-number"><%= products.length %></p>
      <a href="/admin/products" class="dashboard-link">Manage Products</a>
    </div>

    <div class="dashboard-card">
      <h2>Total Orders</h2>
      <p class="stat-number"><%= orders.length %></p>
      <a href="/admin/orders" class="dashboard-link">View Orders</a>
    </div>

    <div class="dashboard-card">
      <h2>Total Users</h2>
      <p class="stat-number"><%= users.length %></p>
      <a href="/admin/users" class="dashboard-link">Manage Users</a>
    </div>
  </div>
</section>
